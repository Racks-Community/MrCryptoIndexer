# Local postgreSQL database
DATABASE_URL="postgres://root:root@localhost:5432/mydb?schema=public"

# RPC URL for Polygon
RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/"

# Admin API key for accessing some methos from the API
ADMIN_API_KEY="super_strong_api_key"

# Docker compose
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"
POSTGRES_DB="mrcrypto-indexer-db"

